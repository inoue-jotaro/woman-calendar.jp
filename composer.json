{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "composer", "roots", "wordpress", "wp", "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist",
    "platform": {
      "php": "7.3.4"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://wp-languages.github.io"
    },
    {
      "type": "vcs",
      "url": "https://github.com/cookpad-baby/simple-seo-pack"
    },
    {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "5.8.6",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://connect.advancedcustomfields.com/index.php?a=download&p=pro&k={%ACF_KEY}&t={%version}"
        },
        "require": {
          "ffraenz/private-composer-installer": "^2.0"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "koodimonni-plugin-language/breadcrumb-navxt-ja",
        "type": "wordpress-language",
        "version": "6.0.4",
        "dist": {
          "type": "zip",
          "url": "https://downloads.wordpress.org/translation/plugin/breadcrumb-navxt/{%version}/ja.zip",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "koodimonni-plugin-language/classic-editor-ja",
        "type": "wordpress-language",
        "version": "1.5",
        "dist": {
          "type": "zip",
          "url": "https://downloads.wordpress.org/translation/plugin/classic-editor/{%version}/ja.zip",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "koodimonni-plugin-language/contact-form-7-ja",
        "type": "wordpress-language",
        "version": "5.1.4",
        "dist": {
          "type": "zip",
          "url": "https://downloads.wordpress.org/translation/plugin/contact-form-7/{%version}/ja.zip",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "koodimonni-plugin-language/custom-post-type-ui-ja",
        "type": "wordpress-language",
        "version": "1.5.8",
        "dist": {
          "type": "zip",
          "url": "https://downloads.wordpress.org/translation/plugin/custom-post-type-ui/{%version}/ja.zip",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "koodimonni-plugin-language/duplicate-post-ja",
        "type": "wordpress-language",
        "version": "3.2.3",
        "dist": {
          "type": "zip",
          "url": "https://downloads.wordpress.org/translation/plugin/duplicate-post/{%version}/ja.zip",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "koodimonni-plugin-language/google-sitemap-generator-ja",
        "type": "wordpress-language",
        "version": "4.1.0",
        "dist": {
          "type": "zip",
          "url": "https://downloads.wordpress.org/translation/plugin/google-sitemap-generator/{%version}/ja.zip",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "koodimonni-plugin-language/mw-wp-form-ja",
        "type": "wordpress-language",
        "version": "4.1.2",
        "dist": {
          "type": "zip",
          "url": "https://downloads.wordpress.org/translation/plugin/mw-wp-form/{%version}/ja.zip",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "koodimonni-plugin-language/wp-super-cache-ja",
        "type": "wordpress-language",
        "version": "1.6.9",
        "dist": {
          "type": "zip",
          "url": "https://downloads.wordpress.org/translation/plugin/wp-super-cache/{%version}/ja.zip",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "koodimonni-plugin-language/taxonomy-terms-order-ja",
        "type": "wordpress-language",
        "version": "1.5.7",
        "dist": {
          "type": "zip",
          "url": "https://downloads.wordpress.org/translation/plugin/taxonomy-terms-order/{%version}/ja.zip",
          "reference": "master"
        }
      }
    }
  ],
  "require": {
    "php": ">=7.1",
    "composer/installers": "^1.7",
    "vlucas/phpdotenv": "^3.4.0",
    "oscarotero/env": "^1.2.0",
    "roots/wordpress": "^5.2.2",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "advanced-custom-fields/advanced-custom-fields-pro": "*",
    "cookpad-baby/simple-seo-pack": "dev-master",
    "koodimonni-language/core-ja": "*",
    "koodimonni-plugin-language/breadcrumb-navxt-ja": "*",
    "koodimonni-plugin-language/classic-editor-ja": "*",
    "koodimonni-plugin-language/contact-form-7-ja": "*",
    "koodimonni-plugin-language/custom-post-type-ui-ja": "*",
    "koodimonni-plugin-language/duplicate-post-ja": "*",
    "koodimonni-plugin-language/google-sitemap-generator-ja": "*",
    "koodimonni-plugin-language/mw-wp-form-ja": "*",
    "koodimonni-plugin-language/wordpress-importer-ja": "*",
    "koodimonni-plugin-language/wp-super-cache-ja": "*",
    "wpackagist-plugin/ajax-calendar": "*",
    "wpackagist-plugin/all-in-one-seo-pack": "*",
    "wpackagist-plugin/amazon-s3-and-cloudfront": "*",
    "wpackagist-plugin/breadcrumb-navxt": "*",
    "wpackagist-plugin/browser-shots": "*",
    "wpackagist-plugin/classic-editor": "*",
    "wpackagist-plugin/contact-form-7": "*",
    "wpackagist-plugin/contact-form-7-add-confirm": "*",
    "wpackagist-plugin/custom-post-type-permalinks": "*",
    "wpackagist-plugin/custom-post-type-ui": "*",
    "wpackagist-plugin/duplicate-post": "*",
    "wpackagist-plugin/event-organiser": "*",
    "wpackagist-plugin/google-apps-login": "*",
    "wpackagist-plugin/google-sitemap-generator": "*",
    "wpackagist-plugin/instagram-feed": "*",
    "wpackagist-plugin/intuitive-custom-post-order": "*",
    "wpackagist-plugin/loginizer": "*",
    "wpackagist-plugin/mw-wp-form": "*",
    "wpackagist-plugin/my-calendar": "*",
    "wpackagist-plugin/tablepress": "*",
    "wpackagist-plugin/user-admin-simplifier": "*",
    "wpackagist-plugin/wordpress-importer": "*",
    "wpackagist-plugin/wp-admin-ui-customize": "*",
    "wpackagist-plugin/wp-dashboard-notes": "*",
    "wpackagist-plugin/wp-mail-smtp": "*",
    "wpackagist-plugin/wp-multibyte-patch": "*",
    "wpackagist-plugin/wp-super-cache": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4.2",
    "roave/security-advisories": "dev-master"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp",
    "dropin-paths": {
      "web/app/languages/": ["vendor:koodimonni-language"],
      "web/app/languages/plugins/": ["vendor:koodimonni-plugin-language"],
      "web/app/languages/themes/": ["vendor:koodimonni-theme-language"]
    }
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
